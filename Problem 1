public class Problem1 {
	
	public static void main(String[] args) {
		int sumOfMultiples = 0;
		
		for (int i = 0; i < 1000; i++) { //setting range of i between 0 and 1000, and increasing i by 1 each iteration
			if (i%3 == 0 || i%5 == 0) { //if the i value is divisible by 3 or 5, this statement will be followed
				sumOfMultiples += i; //this will add the value of i to the sum that we set to 0
			}
		}
		System.out.print("The sum of all the multiples of 3 or 5 below 1000 are " + sumOfMultiples); //prints out sumOfMultiples to console
	}
}
